<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.detail.DetailFragment">

    <com.urizev.moviesudacity.view.common.ErrorView
        android:id="@+id/error"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.urizev.moviesudacity.PosterView
                android:id="@+id/poster"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/colorControlHighlight"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Indiana Jones and the last cruzade"
                app:layout_constraintTop_toTopOf="@+id/poster"
                android:layout_marginStart="16dp"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/poster"
                android:layout_marginLeft="16dp"
                app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2016"
                style="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintLeft_toLeftOf="@+id/title"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/title"/>

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2h 5m"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/year"
                />

            <TextView
                android:id="@+id/outline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="This is the outline of the movie"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/poster"
                app:layout_constraintTop_toBottomOf="@+id/poster"
                app:layout_constraintRight_toRightOf="parent"
                android:textStyle="italic"
                style="@style/TextAppearance.AppCompat.Subhead"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/plot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:textColor="?android:attr/textColorPrimary"
                android:background="@color/colorPrimaryLight"
                android:lineSpacingMultiplier="1.2"
                android:fontFamily="sans-serif-light"
                app:layout_constraintLeft_toLeftOf="@+id/outline"
                app:layout_constraintRight_toRightOf="@+id/rating"
                app:layout_constraintTop_toBottomOf="@+id/outline"
                tools:text="This is the plot of the movie. It has quite a few mysteries which are supposed to be solved at the end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintVertical_bias="0.0"/>

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="7.5"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/year"
                app:layout_constraintBottom_toBottomOf="@+id/poster"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_star_black_24dp"
                android:drawableStart="@drawable/ic_star_black_24dp"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:drawablePadding="4dp"
                app:layout_constraintRight_toRightOf="@+id/duration"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>
